<h1>Blog Posts</h1>
<html>
<head>
<style>
h1 {text-align: center;}
div {text-align: center;}

.text {
	margin : auto;
	text-align : center;
	width : 60%;
}

.btn {
	background-color: white;
 color: black;
 border: 2px solid #e7e7e7; /* Green */
}

</style>
</head>
<body>
<br>
<% @posts.each do |post| %>
	<div class="well">
	 	<h3 class ="text" align='center'><%= post.title %></h3>
		<br>
	 	<p class="text"> <%= post.description %></p>
		<br>
	 	<button class="btn"><%= link_to "Read More", post_path(post) %></button>
	 </div>
	 <br>
	 <br>
<% end %>

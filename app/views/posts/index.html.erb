<html>
   <head>
      <style>
         h1 {text-align: center;}
         div {text-align: center;}
         .text {
         margin : auto;
         text-align : left;
         width : 60%;
         }

         .btn {
         background-color: white;
         color: black;
         border: 2px solid #e7e7e7;
         }
      </style>
   </head>
   <body>
     <br>
      <% @posts.each do |post| %>
      <div>
        <h3 class ="text" align='left'><%= post.title %></h3>
        <br>
        <p class="text" style="color:gray">
            <a><%= post.created_at.strftime("%d %B %Y")%></a>
            <a href="<%= url_for(post) + "#disqus_thread"%>"></a>
        </p>
        <script id="dsq-count-scr" src="//zeoblocks-com.disqus.com/count.js" async></script>
        <br>
        <p class="text"> <%= post.description %>
          <br>
          <br>
          <a class = "text" href="#"><%= link_to "Read More", post_path(post) %></a>
        </p>
        <br>
      </div>
      <br>
      <% end %>
   </body>
</html>
